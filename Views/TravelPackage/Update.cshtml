@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Crea Viaggio | ";
}

@model TravelPackage;

@*$1$ CONTROLLO ACCESSO EFFETTUATO #1#
@if (SignInManager.IsSignedIn(User))
{*@
    <div class="container">
    <div class="d-flex justify-content-center">
        <section class="col-md-10 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-start flex-wrap align-items-center pt-3 pb-2 mb-3">

                @* Singola scheda *@
                <div class="card w-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="font-weight-bold">Modifica Viaggio selezionato</span>
                        <a class="btn btn_custom_secondary" asp-area="" asp-controller="TravelPackage" asp-action="Index">Torna all'elenco</a>
                    </div>

                    <div class="card-body d-flex flex-column flex-md-row row">
                        
                       <form asp-controller="TravelPackage" asp-action="Update" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            
                            @*{{-- Nome prodotto --}}*@
                            <div class="form-group">
                                <label class="font-weight-bold" for="name">Titolo del Viaggio</label>
                                <input type="text"
                                       class="form-control"
                                       asp-for="@Model.Title"
                                       id="name"
                                       placeholder="Inserisci il nome del Prodotto">
                                <span asp-validation-for="@Model.Title" class="text-danger"></span>
                            </div>
                            
                            @*{{-- Data Inizio --}}*@
                            <div class="form-group">
                                <label class="font-weight-bold" for="description">Data inizio Viaggio</label>
                                <input type="date"
                                       class="form-control"
                                       asp-for="@Model.StartDate"
                                       id="description"
                                       placeholder="Inserisci la descrizione del Prodotto"></input>
                                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
                            </div>
                            
                            @*{{-- Data Inizio --}}*@
                            <div class="form-group">
                                <label class="font-weight-bold" for="description">Data fine Viaggio</label>
                                <input type="date"
                                            class="form-control"
                                            asp-for="@Model.EndDate"
                                            id="description"
                                            placeholder="Inserisci la descrizione del Prodotto"></input>
                                <span asp-validation-for="@Model.EndDate" class="text-danger"></span>
                            </div>
                        
                            @*{{-- Prezzo prodotto --}}*@
                            <div class="form-group">
                                <label class="font-weight-bold" for="price">Prezzo del Viaggio</label>
                                <input type="text"
                                       class="form-control"
                                       asp-for="@Model.Price"
                                       id="price"
                                       placeholder="Inserisci il Prezzo">
                                <span asp-validation-for="@Model.Price" class="text-danger"></span>
                            </div>
                        
                            @*{{-- Descrizione prodotto --}}*@
                            <div class="form-group">
                                <label class="font-weight-bold" for="description">Descrizione del Viaggio</label>
                                <textarea type="text"
                                            rows="6"
                                            class="form-control"
                                            asp-for="@Model.Description"
                                            id="description"
                                            placeholder="Inserisci la descrizione del Prodotto"></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                            
                            
                            @*{{-- Inserimento Immagini --}}*@
                            <div class="form-group">
                                <label class="font-weight-bold" for="item-image">Aggiungi l'immagine del Viaggio</label>
                                <input type="text" 
                                       class="form-control" 
                                       asp-for="@Model.ImgUrl"
                                       id="item-image">
                                <span asp-validation-for="@Model.ImgUrl" class="text-danger"></span>
                            </div>
                        
                            @*{{-- Submit --}}*@
                            <button type="submit" class="btn btn_custom my-2">Modifica</button>
                        </form>
                    </div>
                </div>
            </div>
            @* Singola scheda *@
        </section>
    </div>
</div>

@*}
$1$ SE NEGATIVO MOSTRO ERRORE #1#
else
{
    @Html.Partial("../Shared/Partials/_ErrorAuth")
}*@